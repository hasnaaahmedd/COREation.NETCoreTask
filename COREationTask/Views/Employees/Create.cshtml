@model COREationTask.Models.Employee

@{
    ViewData["Title"] = "Create";
}


<h4>Create new employee</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="employeeName" class="control-label"></label>
                <input asp-for="employeeName" class="form-control" />
                <span asp-validation-for="employeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employeeEmail" class="control-label"></label>
                <input asp-for="employeeEmail" class="form-control" />
                <span asp-validation-for="employeeEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="companyID" class="control-label"></label>
                <select asp-for="companyID" class="form-control" asp-items="ViewBag.companiesID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success" asp-action="Index">Back to DataTable List</a>
</div>

<br />

<div>
    <a class="btn btn-success" asp-action="AllEmployees">Back to server-side List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
